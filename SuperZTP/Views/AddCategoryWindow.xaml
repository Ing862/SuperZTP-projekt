<Window x:Class="SuperZTP.Views.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperZTP.Views"
        mc:Ignorable="d"
        Title="AddCategoryWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="CategoryNameTextBox" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="340" Height="30" />
        <Button Content="Dodaj kategorię" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="40" Margin="20,70,0,0" Click="AddCategoryButton_Click" />
        <Button Content="Anuluj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="40" Margin="140,70,0,0" Click="CancelButton_Click" />
    </Grid>
</Window>
